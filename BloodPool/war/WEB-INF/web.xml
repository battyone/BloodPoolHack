<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<servlet>
		<servlet-name>RegisterController</servlet-name>
		<servlet-class>com.bloodpool.controller.RegisterController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>RegisterController</servlet-name>
		<url-pattern>/registerController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginController</servlet-name>
		<servlet-class>com.bloodpool.controller.LoginController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginController</servlet-name>
		<url-pattern>/loginController</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>SendRequestController</servlet-name>
		<servlet-class>com.bloodpool.controller.SendRequestController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendRequestController</servlet-name>
		<url-pattern>/sendRequestController</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>DistController</servlet-name>
		<servlet-class>com.bloodpool.controller.DistController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DistController</servlet-name>
		<url-pattern>/distController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogoutController</servlet-name>
		<servlet-class>com.bloodpool.controller.LogoutController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutController</servlet-name>
		<url-pattern>/logoutController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ChangePasswordController</servlet-name>
		<servlet-class>com.bloodpool.controller.ChangePasswordController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ChangePasswordController</servlet-name>
		<url-pattern>/changePasswordController</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ForgotPasswordController</servlet-name>
		<servlet-class>com.bloodpool.controller.ForgotPasswordController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ForgotPasswordController</servlet-name>
		<url-pattern>/forgotPasswordController</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
